<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <li>
    <%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </li>
<% end %>
<%= link_to "Add new task", new_task_path %>

